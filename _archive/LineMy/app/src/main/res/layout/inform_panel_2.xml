<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/tv_advise_scroll"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_advise_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21cbcf"
        android:gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingLeft="18dp"
        android:paddingRight="6dp"
        android:textColor="#fcfcfc"
        android:textSize="14sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#21cbcf" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="14dp"
                    android:background="#21cbcf" />

                <TextView
                    android:id="@+id/tv_advise_what"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:text="Что рисовать"
                    android:textColor="#de6565"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_advise_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="14dp"
                    android:background="#21cbcf" />

                <TextView
                    android:id="@+id/tv_advise_how"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:text="Как рисовать"
                    android:textColor="#de6565"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_advise_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:textSize="17sp" />

        </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#21cbcf" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="49">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_advise_example"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="14dp"
                        android:background="#21cbcf" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:text="Примеры"
                        android:textColor="#de6565"
                        android:textSize="17sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_exs_one"
                    android:layout_below="@+id/tv_advise_example"
                    android:layout_gravity="top"
                    android:src="@drawable/shema"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/image_exs_two"
                    android:layout_below="@+id/image_exs_one"
                    android:background="#21cbcf" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/image_exs_two"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shematwo"/>

            </RelativeLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>
